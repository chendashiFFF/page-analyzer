{
  "manifest_version": 3,
  "name": "AI 助手",
  "version": "2.0",
  "description": "AI驱动的表单填充和内容分析工具",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://api.anthropic.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI 助手"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon16.png",
    "128": "icons/icon16.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "modules/form-filler.js",
        "modules/error-monitor.js",
        "modules/page-analyzer.js",
        "content.js"
      ]
    }
  ]
}
